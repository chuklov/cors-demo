<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet runOnChange="false" id="001" author="chuklov">
        <preConditions onFail="MARK_RAN" onError="CONTINUE">
            <not>
                <tableExists tableName="users"/>
            </not>
        </preConditions>

        <createTable tableName="users" >
            <column name="id" type="int unsigned" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="username" type="varchar(68)" defaultValue="">
                <constraints nullable="false" unique="true" uniqueConstraintName="username"/>
            </column>
            <column name="kc_uuid" type="varchar(36)" defaultValue="NULL"/>

        </createTable>

        <rollback>
            <dropTable tableName="users"/>
        </rollback>
    </changeSet>
</databaseChangeLog>